<Window x:Class="kinectControlRobot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:kinectControlRobot"
        Title="MainWindow" 
        WindowState="Maximized" TextElement.Foreground="Black" AllowsTransparency="True" WindowStyle="None" Opacity="1" Topmost="True">
    <Viewbox>
        <Grid x:Name="LayoutRoot" Height="1200" Width="1920" Background="#00000000">
            <c:SkeletonViewer x:Name="SkeletonViewerElement" Background="#00000000" />
            <Canvas x:Name="HandCanvas" Background="#00000000">
                <StackPanel Width="600" Canvas.Left="80" Canvas.Top="220" Background="#00000000"></StackPanel>
            </Canvas>
            <c:SkeletonViewer HorizontalAlignment="Left" Margin="640,-19,0,0" x:Name="skeletonViewer1" VerticalAlignment="Top" />
        </Grid>
    </Viewbox>
    <Window.Background>
        <SolidColorBrush />
    </Window.Background>
</Window>
